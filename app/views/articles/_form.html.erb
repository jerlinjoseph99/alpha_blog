<% if @article.errors.any? %>
    <div class="alert alert-danger fade in">
    <!--a href="/articles/new" class="close" data-dismiss="alert" aria-label="close">Ã—</a-->
        <% @article.errors.full_messages.each do |error_message| %>
            <%= error_message %></br>
        <% end %>
    </div>
<% end %>
        
        
<%= form_for(@article, :html => {:class => " "}) do |f| %> 
 
    <div class="form-group">
        <%= f.label :title %>
        <%=f.text_field :title, :class => "form-control", :placeholder => "Enter Title", :autofocus => "true" %>
    </div>
    
    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body,:rows => "10", :class => "form-control", :placeholder => "Enter article content" %>
    </div>
             
    <div class="form-group">
        <%= f.submit form_action, :class => "btn btn-primary" %>
    </div>
 
<% end %>